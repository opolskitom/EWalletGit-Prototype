<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:text="TransactionAmt"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:id="@+id/transactionAmt"
        android:layout_weight="66.6"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3">

        <TextView
            android:gravity="center"
            android:text="contactName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/contactName"/>

        <TextView
            android:gravity="center"
            android:text="contactCompany"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/contactCompany"
            />

        <TextView
            android:gravity="center"
            android:text="contactEmail"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/contactEmail"/>

        <TextView
            android:gravity="center"
            android:text="contactPhone"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/contactPhone"
            />

        <TextView
            android:gravity="center"
            android:text="salesDate"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/salesDate"/>

        <TextView
            android:gravity="center"
            android:text="transactionId"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/transactionId"
            />

    </LinearLayout>

</LinearLayout>